@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<MyProject.Models.Article>

<h2>Articles</h2>
<div class="row">
    <div class="col-md-6">

        @if (Model != null && Model.Any())

        {
            <ul>
                @foreach (var article in Model)

                {
                    <li>@article.Title</li>
                    <li>@article.Content</li>
                    <hr />
                }
            </ul>
        }

        else

        {
            <p>No articles available.</p>
        }

    </div>
    <div class="col-md-6">
        <img src="~/Images/flower.jfif" />
    </div>
</div>
